{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
  }
}
