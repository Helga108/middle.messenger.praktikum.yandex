<div class="chat-thread-wrapper">

    {{#if selectedChatId}}
    <div class="chat-thread-messages">
      {{#each chatMessages}}
        {{#if this.isMine}}
        <div class="my-message">{{this.content}}</div>
        {{else}}
        <div class="others-message">{{this.content}}</div>
        {{/if}} 
      {{/each}}
      {{{messageInput}}}
    {{else}}
      <div class="chat-thread-stub">Choose a chat to start messaging</div>
      </div>
    {{/if}}
  </div>

</div>